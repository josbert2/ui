---
import Icon from '../components/Icon.astro';

const { title, subtitle, description, image = 'divider' } = Astro.props;
---

<div class="rounded-box ring-primary/20 to-primary/10 from-base-100/10 w-full gap-6 bg-gradient-to-br p-6 text-start ring-1 sm:flex">
  <div class="flex flex-col gap-1.5 sm:w-7/12">
    <p class="text-primary text-lg font-semibold capitalize">{title}</p>
    <h1 class="text-base-content/90 text-4xl leading-tight font-bold capitalize">{subtitle}</h1>
    <p class="text-base-content/80 mt-2 text-base font-normal">{description}</p>
  </div>
  <div class="flex grow items-center justify-center max-sm:mt-5 max-sm:justify-start">
    <Icon name={image}/>
  </div>
</div>